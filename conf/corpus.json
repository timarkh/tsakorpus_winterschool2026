{
  "corpus_name": "winterschool2026",
  "citation": "Winter school spoken corpus.",
  "input_format": "json",
  "debug": false,
  "media": true,
  "video": false,
  "media_length": 60,
  "max_context_expand": 10,
  "max_distance_filter": 200000,
  "max_docs_retrieve": 9999,
  "max_words_in_sentence": 40,
  "query_timeout": 60,
  "year_sort_enabled": true,
  "elastic_cacert": "/etc/elasticsearch/certs/http_ca.crt",
  "viewable_meta": [
    "filename",
    "title",
    "genre",
    "year",
    "speakers",
    "linguists"
  ],
  "localized_meta_values": [
    "title"
  ],
  "sentence_meta": [
    "speaker",
    "gender",
	"birth_year",
    "speaker_type"
  ],
  "search_meta": {
    "columns": [
      [
        {
          "type": "input_text",
          "name": "speakers",
          "placeholder": "Speakers"
        },
        {
          "type": "input_text",
          "name": "title",
          "placeholder": "Title"
        },
        {
          "type": "separator"
        },
        {
          "type": "input_number",
          "name": "year_from",
          "placeholder": "Year: from"
        },
        {
          "type": "input_number",
          "name": "year_to",
          "placeholder": "Year: to"
        }
      ],
      [
        {
          "type": "input_text",
          "name": "genre",
          "placeholder": "Genre"
        },
        {
          "type": "option",
          "name": "genre",
          "value": "dialogue",
          "text": "dialogue"
        },
        {
          "type": "option",
          "name": "genre",
          "value": "monologue",
          "text": "monologue"
        }
      ]
    ],
    "stat_options": [
      "genre",
      "linguists",
      "title",
      "year",
      "speaker",
      "gender",
	  "birth_year"
    ]
  },
  "generate_dictionary": false,
  "fulltext_view_enabled": true,
  "use_nonpersistent_fulltext_id": true,
  "languages": [
    "hungarian",
    "english"
  ],
  "transliterations": [
    "original"
  ],
  "input_methods": [
    "normal"
  ],
  "interface_languages": [
    "en",
    "ru"
  ],
  "all_language_search_enabled": false,
  "gloss_search_enabled": false,
  "ambiguous_analyses": true,
  "lang_props": {
    "hungarian": {}
  }
}